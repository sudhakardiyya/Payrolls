<table>
  <tr>
    <th>Employe</th>
    <th>Basic</th>
    <th>Hra</th>
    <th>Travel</th>
    <th>Daily</th>
    <th>Medical</th>
    <th>Other</th>
    <th>Variable</th>
    <th>Gross</th>
    <th>Professional tax</th>
    <th>Pf</th>
    <th>Esi</th>
    <th>Total deductions</th>
    <th>Net salary</th>
    <th>Active</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employe.salaries.each do |salary| %>
  <tr>
    <td><%= salary.employe.name %></td>
    <td><%= salary.basic %></td>
    <td><%= salary.hra %></td>
    <td><%= salary.travel %></td>
    <td><%= salary.daily %></td>
    <td><%= salary.medical %></td>
    <td><%= salary.other %></td>
    <td><%= salary.variable %></td>
    <td><%= salary.gross %></td>
    <td><%= salary.professional_tax %></td>
    <td><%= salary.pf %></td>
    <td><%= salary.esi %></td>
    <td><%= salary.total_deductions %></td>
    <td><%= salary.net_salary %></td>
    <td><%= salary.active %></td>
    <td><%= salary.created_at %></td>
    <td><%= link_to 'Show', url_for([@employe, salary]) %></td>
    <% if salary.active == true %>
        <td><%= link_to 'Edit', url_for([:edit, @employe, salary]) %></td>
    <% end %>
  </tr>
<% end %>
</table>

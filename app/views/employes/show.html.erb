<p id="notice"><%= notice %></p>
<table class="attr_table">
  <tr>
    <th>Number</th><td><%= @employe.number %></td>
  </tr>
  <tr>
    <th>Name</th><td><%= @employe.first_name %> <%= @employe.middle_name %> <%= @employe.last_name %></td>
  </tr>
  <tr>
    <th>DOB</th><td><%= @employe.date_of_birth %></td>
  </tr>
  <tr>
    <th>Sex</th><td><%= @employe.sex %></td>
  </tr>
  <tr>
    <th>Email</th><td><%= @employe.email %></td>
  </tr>
  <tr>
    <th>Pan</th><td><%= @employe.pan %></td>
  </tr>
  <tr>
    <th>Designation</th><td><%= @employe.designation %></td>
  </tr>
  <tr>
    <th>Mobile Number</th><td><%= @employe.mobile_number %></td>
  </tr>
  <tr>
    <th>Date of Joining</th><td><%= @employe.date_of_joining %></td>
  </tr>
  <tr>
    <th>Address</th><td><%= @employe.address %></td>
  </tr>
  <tr>
    <th>Lat down CTC</th><td><%= @employe.last_down_ctc %></td>
  </tr>
  <tr>
    <th colspan = '2'><br/>Bank Deatils</th>
  </tr>
  <tr>
    <th>Bank Name</th><td><%= @employe.bank_name %></td>
  </tr>
  <tr>
    <th>Name in Bank</th><td><%= @employe.name_in_bank %></td>
  </tr>
  <tr>
    <th>Account Number</th><td><%= @employe.act_number %></td>
  </tr>
  <tr>
    <th>IFSC Code</th><td><%= @employe.ifsc_code %></td>
  </tr>
</table>
<br/>
<h3>Salary Details</h3>
<%= link_to 'Add Appraisal', new_employe_salary_path(@employe) %>
<%= render 'salaries/salaries', :locals => {:parent => @employe} %>

<br/>
<% if @employe.salaries.size > 0 %>
  <h3>Payrolls</h3>
  <%= link_to 'Add Payroll', new_employe_payroll_path(@employe) %>
<% end %>
